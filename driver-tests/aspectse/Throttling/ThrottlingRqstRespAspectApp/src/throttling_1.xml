<?xml version="1.0" encoding="UTF-8"?>
<throttling>
    <config>
	    <!-- Polling Timer for Throttling Thread -->
	    <property name="throttle_polling_timer" value="1000">
        <!-- Messages per second -->  
        <property name="throttle_rate" value="7" />
        <!-- Maximum number of queue entries -->  
        <property name="queue-length" value="1000" />        
    </config>    
    <ruleset name="mythrottling">
        <rule name="myfirstrule">
            <xpath keyExpression="/Employee/FirstName"/>            
        </rule>
    </ruleset>
</throttling>