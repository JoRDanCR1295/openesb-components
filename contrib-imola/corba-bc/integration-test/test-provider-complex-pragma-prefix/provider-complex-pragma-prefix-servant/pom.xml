<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <!--
    =========================================================
    COORDINATES
    =========================================================
  -->
  <parent>
    <groupId>it.imolinfo.jbi4corba.test-provider-complex-pragma-prefix</groupId>
    <artifactId>test-provider-complex-pragma-prefix</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <artifactId>provider-complex-pragma-prefix-servant</artifactId>

  <!--
    =========================================================
    DESCRIPTION
    =========================================================
  -->
  <name>${pom.groupId}.${pom.artifactId}-${pom.version} # ${pom.packaging}</name>

  <description>Corba Servant: PragmaPrefix</description>

  <!--
    =========================================================
    PACKAGING
    =========================================================
  -->
  <packaging>jar</packaging>

  <!--
    =========================================================
    DEPENDENCIES
    =========================================================
  -->
  
  <dependencies>
  <!-- dependencies for jacorb -->
    <dependency>
      <groupId>jacorb</groupId>
      <artifactId>jacorb</artifactId>
      <version>2.2.2.jboss.patch3</version>
<!--
      <version>2.2</version>
-->
    </dependency>
    <dependency>
      <groupId>avalon-framework</groupId>
      <artifactId>avalon-framework</artifactId>
      <version>4.1.5</version>
    </dependency>    
    <dependency>
      <groupId>avalon-logkit</groupId>
      <artifactId>avalon-logkit</artifactId>
      <version>2.0</version>
    </dependency>
  <!-- dependencies for jacorb -->     
  </dependencies>

  <repositories>
  <!-- pick up jacorb from jboss: -->     
    <repository>
      <id>jboss-maven2-repo</id>
      <name>Jboss Maven2 Repository</name>
      <url>http://repository.jboss.com/maven2</url>
    </repository>
  </repositories>

  <!--
    =========================================================
    BUILD
    =========================================================
  -->
  <build>

    <!-- PLUGINS -->
    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>

    </plugins>

  </build>

</project>
